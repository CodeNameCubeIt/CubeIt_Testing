<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cz.cubeit.cubeit"
    android:versionName="Alpha"
    tools:ignore="GradleOverrides">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/icon_app"
        android:label="CubeIt"
        android:roundIcon="@mipmap/icon_app"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:allowBackup="true">
        <activity
            android:name=".Home"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".Activity_Character"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".ActivityFightBoard"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".FightSystem"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Activity_Faction_Base"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".FightSystemNPC"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".ActivitySettings"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Activity_Shop"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Adventure"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".Spells"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Activity_Character_Customization"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".Activity_Story"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".Activity_Inbox"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".Activity_Splash_Screen"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".Activity_Market"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".Activity_FightUniversal_Offline"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".ActivityLoginRegister"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <service
            android:name=".BackgroundSoundService"
            android:enabled="true" />
        <service
            android:name=".ClassCubeItHeadService"
            android:enabled="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>