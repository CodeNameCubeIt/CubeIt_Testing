    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppThemeLaunch" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation.LaunchAnimation</item>
    </style>

    <!-- the animations must have been defined in your "anim" folder, of course -->
    <style name="Animation.LaunchAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <style name="AppTheme.Button.Dark" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_logincolor</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:fontFamily">@font/average_sans</item>
    </style>

    <style name="AppTheme.Button.Brown" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_brown</item>
        <item name="android:textColor">@color/loginColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:fontFamily">@font/average_sans</item>
    </style>

    <style name="FactionPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@drawable/bg_popup_menu_logincolor</item>
        <item name="android:divider">@color/colorSecondary</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="AppTheme.Picker" parent="AppTheme" >
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="android:textColor">@color/bg_basic_white</item>
        <item name="android:editTextColor">@color/bg_basic_white</item>
        <item name="android:textColorPrimary">@color/bg_basic_white</item>w
    </style>


</resources>
