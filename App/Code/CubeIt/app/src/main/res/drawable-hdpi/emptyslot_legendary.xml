<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="300">
    <item android:state_pressed="true" android:drawable="@drawable/emptyslot_pressed" />
    <item android:state_selected="true" android:drawable="@drawable/emptyslot_pressed" />

    <item>
            <shape
                android:shape="rectangle">

                <solid android:color="@color/empty_item" />

                <stroke android:width="2dp" android:color="@color/itemborder_legendary"/>
                <corners android:radius="8dp"/>

            </shape>
    </item>
</selector>