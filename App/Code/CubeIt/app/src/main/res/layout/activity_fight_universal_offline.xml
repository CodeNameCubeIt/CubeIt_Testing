<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFightSystem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:configChanges="orientation"
    android:screenOrientation="sensorLandscape"
    tools:context=".FightSystem">

    <ImageView
        android:id="@+id/imageViewFightBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/colorSecondary" />

    <ImageView
        android:id="@+id/imageViewPlayerChar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleX="-1"
        app:srcCompat="@drawable/character_0"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="82dp" />

    <ImageView
        android:id="@+id/imageViewEnemyChar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/character_0"
        tools:layout_editor_absoluteX="551dp"
        tools:layout_editor_absoluteY="106dp" />

    <ImageView
        android:id="@+id/spellFightEnemy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:alpha="0"
        android:background="@drawable/emptyspellslot"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintDimensionRatio="H,1:1"
        tools:layout_editor_absoluteX="522dp"
        tools:layout_editor_absoluteY="131dp" />

    <ImageView
        android:id="@+id/spellFightPlayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:alpha="0"
        android:background="@drawable/emptyspellslot"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintDimensionRatio="H,1:1"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="131dp" />

    <cz.cubeit.cubeit.CustomTextView
        android:id="@+id/textViewEnemyLevel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="100"
        tools:layout_editor_absoluteX="663dp"
        tools:layout_editor_absoluteY="123dp" />

    <cz.cubeit.cubeit.CustomTextView
        android:id="@+id/textViewPlayerLevel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="100"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="123dp" />

    <ProgressBar
        android:id="@+id/progressBarEnemyHealth"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progresshealth"
        android:rotation="180"
        tools:layout_editor_absoluteX="687dp"
        tools:layout_editor_absoluteY="38dp" />

    <ProgressBar
        android:id="@+id/progressBarPlayerHealth"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animationResolution="@android:integer/config_longAnimTime"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progresshealth"
        android:visibility="visible"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="38dp" />

    <ProgressBar
        android:id="@+id/progressBarPlayerStun"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animationResolution="@android:integer/config_longAnimTime"
        android:max="100"
        android:progressDrawable="@drawable/progress_stun"
        android:visibility="visible"
        tools:layout_editor_absoluteX="300dp"
        tools:layout_editor_absoluteY="8dp" />

    <ProgressBar
        android:id="@+id/progressBarEnemyStun"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animationResolution="@android:integer/config_longAnimTime"
        android:max="100"
        android:progressDrawable="@drawable/progress_stun"
        android:rotation="180"
        android:visibility="visible"
        tools:layout_editor_absoluteX="636dp"
        tools:layout_editor_absoluteY="8dp" />

    <ProgressBar
        android:id="@+id/progressBarEnemyEnergy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progressenergy"
        android:rotation="180"
        tools:layout_editor_absoluteX="574dp"
        tools:layout_editor_absoluteY="82dp" />

    <ProgressBar
        android:id="@+id/progressBarPlayerEnergy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progressenergy"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/textViewPlayerStun"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:gravity="start"
        android:text="0%"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/progressBarPlayerStun"
        app:layout_constraintStart_toStartOf="@+id/progressBarPlayerStun" />

    <TextView
        android:id="@+id/textViewEnemyStun"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:gravity="end"
        android:text="0%"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/progressBarEnemyStun"
        app:layout_constraintStart_toStartOf="@+id/progressBarEnemyStun" />


    <cz.cubeit.cubeit.CustomTextView
        android:id="@+id/textViewPlayerHealth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="start"
        android:text="1050"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="38dp" />

    <cz.cubeit.cubeit.CustomTextView
        android:id="@+id/textViewEnemyHealth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:text="1050"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="685dp"
        tools:layout_editor_absoluteY="38dp" />

    <cz.cubeit.cubeit.CustomTextView
        android:id="@+id/textViewError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="error"
        android:textAlignment="textStart"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="333dp" />

    <cz.cubeit.cubeit.CustomTextView
        android:id="@+id/textViewPlayerEnergy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="start"
        android:text="100"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="82dp" />

    <cz.cubeit.cubeit.CustomTextView
        android:id="@+id/textViewEnemyEnergy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:text="100"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="574dp"
        tools:layout_editor_absoluteY="82dp" />

    <ImageView
        android:id="@+id/imageViewEnemyUsedSpell"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:adjustViewBounds="true"
        android:alpha="0.6"
        android:background="@color/colorPrimaryDarker"
        android:padding="2dp"
        android:src="@drawable/basicattack"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="42dp" />

    <ImageView
        android:id="@+id/imageViewPlayerUsedSpell"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:adjustViewBounds="true"
        android:alpha="0.6"
        android:background="@color/colorPrimaryDarker"
        android:padding="2dp"
        android:src="@drawable/basicattack"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="42dp" />

    <ImageView
        android:id="@+id/imageViewFightSurrender"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_flag"
        tools:layout_editor_absoluteX="376dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline235"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline236"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.31" />

</androidx.constraintlayout.widget.ConstraintLayout>