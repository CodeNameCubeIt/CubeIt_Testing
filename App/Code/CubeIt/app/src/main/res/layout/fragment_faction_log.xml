<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutFragmentCharacterStats"
    android:layout_width="match_parent"
    android:windowSoftInputMode="stateVisible|adjustResize"
    android:layout_height="match_parent"
    android:background="@drawable/bg_basic_logincolor_dark_border2"
    android:configChanges="orientation"
    android:screenOrientation="sensorLandscape">


    <ListView
        android:id="@+id/listViewInnerFactionLog"
        android:layout_width="0dp"
        android:scrollbars="none"
        android:divider="@color/colorSecondary"
        android:dividerHeight="1dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextInnerFactionLog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_basic_logincolor_dark_border2"
        android:stackFromBottom="true"
        app:layout_constraintTop_toTopOf="parent" />

    <cz.cubeit.cubeit.CustomEditText
        android:id="@+id/editTextInnerFactionLog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textColorHint="@color/loginColor_4"
        android:layout_marginBottom="2dp"
        android:hint="chat"
        android:windowSoftInputMode="adjustPan"
        android:ems="10"
        android:fontFamily="@font/average_sans"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPersonName"
        android:textColor="@color/bg_basic_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewInnerFactionLogSend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        android:tint="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextInnerFactionLog"
        app:srcCompat="@android:drawable/ic_menu_send" />
</androidx.constraintlayout.widget.ConstraintLayout>
