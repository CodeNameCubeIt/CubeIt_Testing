<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login"
        android:background="@drawable/loginregister_bg">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/Password"
            android:layout_centerInParent="true"
            android:hint="Password"
            app:layout_constraintTop_toBottomOf="@+id/Email"
            app:layout_constraintStart_toStartOf="@+id/guideline5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/Email"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:hint="Email" android:layout_marginTop="10dp"/>
    <ImageButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/Login"
            android:src="@drawable/login"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@+id/Password"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:adjustViewBounds="true"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView2"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/Login"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:clickable="true"
            android:layout_marginLeft="45dp" android:layout_marginStart="45dp" android:layout_marginTop="4dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginEnd="42dp" android:layout_marginRight="42dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:layout_marginTop="5dp" android:text="Sign Up"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.36"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.44"/>
</android.support.constraint.ConstraintLayout>