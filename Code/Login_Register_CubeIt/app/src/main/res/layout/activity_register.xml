<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".register">

        <EditText
                android:id="@+id/editTextPasswordRegister"
                android:layout_width="225dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.547"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextMailRegister" />

        <TextView
                android:id="@+id/textViewRules"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:text="I have read privacy rules"
                app:layout_constraintEnd_toEndOf="@+id/editTextRePasswordRegister"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/checkBoxReadRules"
                app:layout_constraintTop_toBottomOf="@+id/editTextRePasswordRegister" />

        <TextView
                android:id="@+id/textViewRules2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Already have an account"
                app:layout_constraintEnd_toEndOf="@+id/editTextRePasswordRegister"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/checkBoxReadRules"
                app:layout_constraintTop_toBottomOf="@+id/editTextRePasswordRegister" />

        <EditText
                android:id="@+id/editTextUsernameRegister"
                android:layout_width="225dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.547"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/editTextMailRegister"
                android:layout_width="225dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.547"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextUsernameRegister" />

        <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextUsernameRegister"
                app:layout_constraintEnd_toStartOf="@+id/editTextUsernameRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextUsernameRegister"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Username" />

        <EditText
                android:id="@+id/editTextRePasswordRegister"
                android:layout_width="225dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.547"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister" />

    <Button
            android:id="@+id/buttonRegisterIn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="28dp"
            android:text="Register"
            app:layout_constraintEnd_toEndOf="@+id/editTextRePasswordRegister"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextRePasswordRegister"
            app:layout_constraintTop_toBottomOf="@+id/textViewRules"/>

        <TextView
                android:id="@+id/textViewMail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextViewMail"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextMailRegister"
                app:layout_constraintEnd_toStartOf="@+id/editTextMailRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextMailRegister"
                app:layout_constraintVertical_bias="0.454"
                tools:text="E-Mail" />

        <TextView
                android:id="@+id/textViewPassword"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextViewPassword"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextPasswordRegister"
                app:layout_constraintEnd_toStartOf="@+id/editTextPasswordRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextPasswordRegister"
                tools:text="Password" />

        <TextView
                android:id="@+id/textViewRePassword"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextViewRePassword"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/editTextRePasswordRegister"
                app:layout_constraintEnd_toStartOf="@+id/editTextRePasswordRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/editTextRePasswordRegister"
                tools:text="Repeat password" />

        <CheckBox
                android:id="@+id/checkBoxReadRules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textViewRules"
                app:layout_constraintStart_toStartOf="@+id/editTextRePasswordRegister"
                app:layout_constraintTop_toBottomOf="@+id/editTextRePasswordRegister" />

</android.support.constraint.ConstraintLayout>