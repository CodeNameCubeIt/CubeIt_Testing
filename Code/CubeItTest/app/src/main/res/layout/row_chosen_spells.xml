<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:configChanges="orientation"
    android:paddingBottom="12dp"
    android:screenOrientation="landscape">

    <Button
        android:id="@+id/button1Chosen"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Energy: "
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@+id/button1Chosen"
        app:layout_constraintEnd_toStartOf="@+id/button1Chosen"
        app:layout_constraintTop_toTopOf="@+id/button1Chosen" />

</android.support.constraint.ConstraintLayout>