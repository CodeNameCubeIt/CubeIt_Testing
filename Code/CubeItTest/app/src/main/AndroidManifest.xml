<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cz.cubeit.cubeit">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/game_icon"
        android:label="CubeIt"
        android:roundIcon="@mipmap/game_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Home" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Character" android:screenOrientation="landscape"/>
        <activity android:name=".FightSystem" android:screenOrientation="landscape"/>
        <activity android:name=".Settings" android:screenOrientation="landscape"/>
        <activity android:name=".Shop" android:screenOrientation="landscape"/>
        <activity android:name=".Adventure" android:screenOrientation="landscape"/>
        <activity android:name=".Spells" android:screenOrientation="landscape"/>
    </application>

</manifest>